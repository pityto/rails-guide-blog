<tr id="article_<%= article.id %>">
  <td class="top aligned">
    <%= article.title %>
  </td>

  <td>
    <%= article.text %>
  </td>

  <td>
    <%= link_to 'Show', article_path(article.id), class: 'ui primary button' %>
    <%= link_to 'Edit', edit_article_path(article), class: 'ui primary button', remote: true %>
    <%= link_to 'Destroy', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'ui red button' %>
  </td>
</tr>
